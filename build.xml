<?xml version="1.0"?>
<project name="SabreDAV" default="dist" basedir=".">

    <target name="build">
        <exec command="bin/pearpackage.php make" passthru="true" />
        <exec command="pear package" passthru="true" />
    </target>

    <target name="dist" depends="build, clean">
        <echo msg="Creating full featured SabreDAV package" />
    </target>    

    <target name="clean">
        <echo msg="Removing build files (cleaning up distribution)" />
        <delete dir="apidocs" />
        <delete file="package.xml" />
    </target>    

</project>
